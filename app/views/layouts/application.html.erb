<!DOCTYPE html>
<html>
  <head>
    <title>Agileproject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <p><%= link_to 'Homepage', root_path %></p>

  <% if user_signed_in? %>
    <p><%= link_to 'Player Profile', user_path(current_user) %></p>
    <p><%= link_to 'Logout', destroy_user_session_path, method: :delete %></p>

  <% else %>
    <p><%= link_to 'Login', new_user_session_path %></p>
    <p><%= link_to 'Sign Up', new_user_registration_path %></p>

  <% end %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
