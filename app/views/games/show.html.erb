<h1><%= @game.name %></h1>

<h2>Current Turn: <span class="current-turn"><%= @game.turn.capitalize %></span></h2>
<%= link_to 'Concede', game_path, method: :delete, data: {confirm: 'Are you sure you want forfeit this game?'} %>

<div class="container">
  <div class="board">
    <% (1..8).each do |y| %>
      <div class="board-row board-row-<%= y %>">
        <% (1..8).each do |x| %>
          <div class="square square-<%= black_or_white(x, y) %>" data-x="<%= x %>" data-y="<%= y %>">
            <% @pieces.each do |piece| %>
              <% if piece.x_location == x && piece.y_location == y && piece.active %>
                <div class="piece"
                     data-piece-id="<%= piece.id %>"
                     data-type="<%= piece.type %>"
                     data-color="<%= piece.piece_color %>">
                  <%#= piece.type %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>